@using WebApplication_Online_Shopping.Controllers;
@using WebApplication_Online_Shopping.Utils;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication_Online_Shopping</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication_Online_Shopping.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #c48288" ;>
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Online Shopping </a>
                 



                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a asp-area="" asp-controller="User"asp-action="Index">Home </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                         @* <li>
                            <div class="btn-group">
                                <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categoty
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="">Fashions</a></li>
                                    <li><a class="dropdown-item" href="#">Mobile</a></li>
                                    <li><a class="dropdown-item" href="#">Laptop</a></li>
                                    <li><a class="dropdown-item" href="#">Electronics</a></li>
                                    <li><a class="dropdown-item" href="#">Personal Care</a></li>
                                    <li><a class="dropdown-item" href="#">Sports</a></li>
                                    <li><a class="dropdown-item" href="#">House Hold Material</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Separated link</a></li>
                                </ul>
                            </div>

                         </li> *@
                       
                         


                        @* <li class="nav-item">
                            <a asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Category" asp-action="Index">Category</a>

                        </li> *@



                        <li class="nav-item">
                            <a asp-area="" asp-controller="Admin" asp-action="Login">Admin</a>

                        </li>

                        <li>
                                @if (User.Identity.IsAuthenticated)
                                {

                                <a asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                              

                                }
                        </li>
                           
                            <li>
                                @if(User.Identity.IsAuthenticated)
                                {
                                    
                                    
                                      <a asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                                    
                                }
                            </li>
                    </ul>
                   
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    @using (Html.BeginForm("Index", nameof(Product), null, FormMethod.Post, null, new { @class = "navbar-form navbar-left", role = "search" }))
                    {
                        <div class="search-container">
                            <input type="search" id="query-details" name="search" placeholder="Search anything ..." aria-label="Search through content of the site">
                            <button type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                                </svg>
                            </button>
                        </div>
                    }

                }
                else
                {
                    @using (Html.BeginForm("Index", nameof(User), null, FormMethod.Post, null, new { @class = "navbar-form navbar-left", role = "search" }))
                    {
                        <div class="search-container">
                            <input type="search" id="query-details" name="search" placeholder="Search anything ..." aria-label="Search through content of the site">
                            <button type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                                </svg>
                            </button>
                        </div>
                    }
                }
               

                
                @if (User.Identity.IsAuthenticated)
                {

                    @* <div class="login-container">
                        <span class="text-success font-weight-bold p-2">@User.Identity.Name</span>
                        <a class="btn btn-sm btn-danger font-weight-bold" asp-action="Logout" asp-controller="Admin" style="margin-left:0">Logout</a>
                    </div> *@
                }
                <Div class="cart-item">
                    <a asp-area="" asp-controller="User" asp-action="Cart" class="btn btn-dark">Cart
                       
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l1.313 7h8.17l1.313-7zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2" />
                        </svg>
                    </a>


                </Div>

                <style>
                  
                    .search-container {
                        display: flex;
                        margin-right:50px;
                    }

                    .search-container input {

                    }

                    ul li {
                        list-style: none;
                        font-size: 1.2rem;
                        display: flex;
                        font-family: 'Times New Roman', Times, serif;
                    }

                        ul li a {
                            color: white;
                            display: block;
                            padding: 3px 22px;
                            border-radius: 20px;
                            text-decoration: none;
                        }

                            ul li a:hover {
                                color: black;
                                background-color: white;
                            }

                    .icon {
                        background-color: #7c6060;
                        width: 300px;
                        height: 44px;
                        border-radius: 5px;
                        align-items: center;
                    }

                </style>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WebApplication_Online_Shopping - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

